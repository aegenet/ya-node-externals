{
  "name": "@aegenet/ya-node-externals",
  "description": "Yet Another Node Externals",
  "version": "0.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    "node": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "default": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "typings": "./dist/bundle.d.ts",
  "bin": {
    "ya-node-externals": "build/cli.js"
  },
  "files": [
    "build"
  ],
  "author": "Alexandre Genet",
  "repository": "https://github.com/aegenet/ya-node-externals",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "nyc": {
    "check-coverage": true,
    "exclude": "**/*.spec.ts",
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.7.17",
    "json": "^11.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-dts": "^6.1.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "@aegenet/belt-readdir": "^1"
  },
  "pre-commit": [
    "lint"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "rimraf ./build ./coverage ./.nyc_output ./node_modules",
    "test": "nyc ts-mocha './src/**/*.spec.ts' --timeout 10000",
    "cover:report": "node ./node_modules/nyc/bin/nyc -t ./coverage report --reporter html --reporter json --reporter text-summary",
    "codecov": "./node_modules/.bin/codecov",
    "build:version": "node ./.build/build-flow.js build",
    "publish:version": "node ./.build/build-flow.js publish",
    "build": "yarn tsc && yarn run build:vite && yarn run build:dts --bundleConfigAsCjs",
    "tsc": "rimraf build && node ./node_modules/typescript/bin/tsc",
    "build:vite": "rimraf dist && node ./node_modules/vite/bin/vite build",
    "build:dts": "node ./node_modules/rollup/dist/bin/rollup -c rollup.config.dts.js"
  }
}
